<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FBFF0A">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Emi Calculation"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/principalAmountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="66dp"
        android:textColor="#000000"
        android:hint="Principal Amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/downPaymentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/principalAmountEditText"
        android:layout_marginTop="68dp"
        android:textColor="#000000"
        android:hint="Down Payment"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/loanTermEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/downPaymentEditText"
        android:layout_marginTop="64dp"
        android:textColor="#000000"
        android:hint="Loan Term (in months)"
        android:inputType="number" />

    <Button
        android:id="@+id/checkEligibilityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#103BCF"
        android:textColor="#FFFFFF"
        android:layout_below="@id/loanTermEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Check Eligibility" />

</RelativeLayout>
